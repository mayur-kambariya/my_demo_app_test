<p id="notice"><%= notice %></p>

<h1>Listing Cleaners</h1>

<table border=2 class="table table-bordered">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Quality score</th>
      <th>Cities</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @cleaners.each do |cleaner| %>
      <tr>
        <td><%= cleaner.first_name %></td>
        <td><%= cleaner.last_name %></td>
        <td><%= cleaner.email %></td>
        <td><%= cleaner.quality_score %></td>
        <td><%= cleaner.cities.pluck(:name).join(',')%>
        </td>
        <td><%= link_to 'Show', cleaner %></td>
        <td><%= link_to 'Edit', edit_cleaner_path(cleaner) %></td>
        <td><%= link_to 'Destroy', cleaner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h3><%= link_to 'New Cleaner', new_cleaner_path %></h3>
